<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.widget.IconButton
        android:id="@+id/filter_open"
        android:text="{fa-unlock} Offen"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <android.widget.IconButton
        android:id="@+id/filter_in_edit"
        android:text="{fa-pencil-square-o} in Bearbeitung"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <android.widget.IconButton
        android:id="@+id/filter_closed"
        android:text="{fa-lock} Abgeschlossen"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

</LinearLayout>